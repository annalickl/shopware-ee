<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="wirecard_elastic_engine.paypal_payment_service"
                 class="WirecardElasticEngine\Component\Payments\PaypalPayment">
        </service>
        <service id="wirecard_elastic_engine.subscriber.frontend" 
                 class="WirecardShopwareElasticEngine\Subscriber\FrontendSubscriber">
            <argument>%wirecard_shopware_elastic_engine.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>
        <service id="wirecard_elast_engine_order.subscriber.templates" class="WirecardShopwareElasticEngine\Subscriber\ExtendOrder">
            <argument>%wirecard_shopware_elastic_engine.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>
